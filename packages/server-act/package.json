{
  "name": "server-act",
  "version": "1.6.0",
  "homepage": "https://github.com/chungweileong94/server-act#readme",
  "author": "chungweileong94",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chungweileong94/server-act.git"
  },
  "bugs": {
    "url": "https://github.com/chungweileong94/server-act/issues"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./utils": {
      "types": "./dist/utils.d.ts",
      "import": "./dist/utils.mjs",
      "require": "./dist/utils.js"
    },
    "./package.json": "./package.json"
  },
  "files": ["dist", "package.json", "LICENSE", "README.md"],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "prepack": "node ../../.github/scripts/cleanup-package-json.mjs"
  },
  "keywords": [
    "next",
    "nextjs",
    "react",
    "react server component",
    "react server action",
    "rsc",
    "server component",
    "server action",
    "action"
  ],
  "dependencies": {
    "@standard-schema/spec": "^1.0.0",
    "@standard-schema/utils": "^0.3.0"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0",
    "valibot": "^1.0.0",
    "zod": "^3.24.0 || ^4.0.0-beta.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    },
    "zod": {
      "optional": true
    },
    "valibot": {
      "optional": true
    }
  },
  "devDependencies": {
    "tsdown": "^0.13.0",
    "typescript": "^5.6.3",
    "valibot": "1.0.0-rc.0",
    "zod": "^4.0.10"
  }
}
