{
  "name": "server-act",
  "version": "1.6.0",
  "homepage": "https://github.com/chungweileong94/server-act#readme",
  "author": "chungweileong94",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chungweileong94/server-act.git"
  },
  "bugs": {
    "url": "https://github.com/chungweileong94/server-act/issues"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": ["dist", "package.json", "LICENSE", "README.md"],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "prepack": "node ../../.github/scripts/cleanup-package-json.mjs"
  },
  "keywords": [
    "next",
    "nextjs",
    "react",
    "react server component",
    "react server action",
    "rsc",
    "server component",
    "server action",
    "action"
  ],
  "dependencies": {
    "@standard-schema/spec": "^1.0.0",
    "@standard-schema/utils": "^0.3.0"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0",
    "valibot": "^1.0.0",
    "zod": "^3.24.0 || ^4.0.0-beta.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    },
    "zod": {
      "optional": true
    },
    "valibot": {
      "optional": true
    }
  },
  "devDependencies": {
    "tsdown": "^0.12.5",
    "typescript": "^5.6.3",
    "valibot": "1.0.0-rc.0",
    "zod": "^3.24.2",
    "zod-form-data": "^2.0.6"
  }
}
